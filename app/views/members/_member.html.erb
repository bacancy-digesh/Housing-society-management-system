<div class="main">
	<div class="login-form">
		
		<%= form_with model:@user,local:true do |f| %>
			<div class="form-group">
			    <%= f.label :owner_name %><br />
			    <%= f.text_field :owner_name, autofocus: true,class: "form-control" %>
  			</div>

  			<div class="form-group">
			    <%= f.label :email %><br />
			    <%= f.text_field :email, autofocus: true,class: "form-control" %>
  			</div>

  			<div class="form-group">
			    <%= f.label :contact_no %><br />
			    <%= f.telephone_field :contact_no, autofocus: true,class: "form-control" %>
  			</div>
  			<div class="form-group">
			    <%= f.label :block %><br />
			    <%= f.text_field :block, autofocus: true,class: "form-control" %>
  			</div>
  			<div class="form-group">
			    <%= f.label :house_no %><br />
			    <%= f.text_field :house_no, autofocus: true,class: "form-control" %>
  			</div>
  			<div class="form-group">
    			<%= f.submit "Submit" , class:"btn btn-primary btn-block"%>
  			</div>


		<%end%>
	</div>
</div>