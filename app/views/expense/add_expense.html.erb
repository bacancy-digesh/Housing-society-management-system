      <ul>
        <% @expense.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


	<div class="login-form">
		<h2 class="text-center">Add Expanse</h2>
		<%= form_with model:@expense , local: true, url:expense_index_path do |f| %>
			<div class="form-group">
			    <%= f.label :title %><br />
			    <%= f.text_field :title, autofocus: true,class: "form-control" %>
  			</div>

  			<div class="form-group">
			    <%= f.label :description %><br />
			    <%= f.text_area :description, autofocus: true,class: "form-control" %>
  			</div>

  			<div class="form-group">
			    <%= f.label :date %><br />
			    <%= f.date_field :date, autofocus: true,class: "form-control" %>
  			</div>
  			<div class="form-group">
			    <%= f.label :amount %><br />
			    <%= f.text_field :amount, autofocus: true,class: "form-control" %>
  			</div>
  			<div class="form-group">
    			<%= f.submit "Submit" , class:"btn btn-primary btn-block"%>
  			</div>


		<%end%>
	</div>
</div>
<%end%>